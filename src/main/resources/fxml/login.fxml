<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.example.demo.controller.LoginController"
          xmlns="http://javafx.com/javafx/17.0.2"
          xmlns:fx="http://javafx.com/fxml/1"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="用户名：" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" promptText="请输入用户名"
               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="密码：" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="请输入密码"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="登录" onAction="#handleLogin"
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Hyperlink text="没有账号？注册" onAction="#goToRegister"
               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label fx:id="messageLabel" textFill="red"
           GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
