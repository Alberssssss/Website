<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.example.demo.controller.AdminController"
      xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="adminWelcomeLabel" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

    <Label text="发布新公告：" style="-fx-font-size:14px;"/>
    <TextArea fx:id="announcementContentArea" promptText="输入公告内容..." prefHeight="80"/>

    <Button text="发布公告" onAction="#handlePostAnnouncement"/>
    <Label fx:id="statusLabel" textFill="green"/>

    <Label text="所有公告：" style="-fx-font-size:14px;"/>
    <TextArea fx:id="allAnnouncementsArea" prefHeight="120" wrapText="true" editable="false"/>

    <Button text="退出登录" onAction="#handleLogout"/>
</VBox>
